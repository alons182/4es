@import "nib"
@import "normalize.styl"
@import "icons.styl"


rojo = #ed1c24
amarillo = #FFD407
gris = #4D4D4D
oscuro = #2d3538;


*
	box-sizing border-box

body
	font-family 'Open Sans', sans-serif
	font-size 90%
	line-height 30px
	background-color white

ul
	margin 0
	padding 0
	

a
	text-decoration none
	transition all .5s ease
p 
	margin-top 0
	margin-bottom 1.25rem
h1
h2
h3
h4
h5
	margin-top 0
	font-weight 400
h1
	line-height 45px

img
	max-width 100%
	height auto
.btn
.submit
.more-link
.search-submit			
	border 1px solid #fff
	font-size inherit
	color inherit
	background 0 0
	text-align center
	cursor pointer
	padding 10px 52px 10px
	display inline-block
	text-transform uppercase
	font-family lovelo,sans-serif
	outline 0
	position relative
	transition all .3s ease
	transform translateZ(0)
	
	&:hover
		background-color: rgba(0,0,0,.1);
		span
			left -20px 
		i 
			left 76%
			opacity 1
	
	span
		position relative
		left 0
		transition all .2s ease
	i
		font-size 22px
		position absolute
		margin-top -11px
		top 50%
		left 73%
		opacity 0
		transition all .2s ease-out
    
.header
	position relative
	background-color white
	padding .5rem
	height 100px
	width 100%
	border-bottom 1px solid #d9d9d9
	border-color rgba(0,0,0,.09)
	z-index 999
	&-container
		overflow hidden
	&-logo
		display block
		width 190px
		float left
		&-white 
			display none
		
	&-menu
		display none
		position absolute
		left 0
		right 0
		top 100px
		background-color rojo
		z-index 999
		&-item
		.menu-item	
			display block
		&-link
		a
			display block
			color white
			padding 1rem
			border-bottom 1px solid white
			text-transform uppercase
		
	&-btn-menu
		float right
		background-color transparent
		border none
		color rojo
		font-size 2.5rem
		line-height 90px
		outline none
